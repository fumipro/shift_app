<div class="main">
  <h1><%=params[:date].to_time
.strftime('%Y年%-m月%-d日')%></h1>
  <div class="row">
    <div class="shift-form">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(url:"/shifts/update/#{current_user.id}/:date",model:@shift, local: true, class:"form-inline") do |f| %>
        <%= render 'shared/shift_error_messages' %>


        <%= f.label :始業時刻 %>
        <%= f.time_field(:begin_time, class: 'form form-control' ) %>

        <%= f.label :終業時刻%>
        <%= f.time_field(:finish_time, class: 'form form-control') %>

        <%=f.hidden_field(:user_id, value: params[:user_id])%>

        <%=f.hidden_field(:date, value: params[:date])%>

        <%=f.hidden_field(:start_time ,value: params[:date])%>

        <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>