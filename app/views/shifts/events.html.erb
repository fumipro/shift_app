<div class="main">
  <div class="table">
    <h1>過去の予定一覧</h1>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
        <% if event.start_time.day < Time.now.day %>
        <tr>
          <td><%= event.start_time.strftime("%Y-%m-%d") %></td>
          <td><%= event.title %></td>
          <% if admin_user? %>
          <td><%= link_to '削除',"/event/destroy/#{event.id}", method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %>
            <% end %>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
    <br>
    <% if @events.blank? %>
    <p>過去の予定はありません</p>
    <% end %>
  </div>
</div>