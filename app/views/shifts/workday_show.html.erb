<div class="main workday_show">
    <h1><%="#{params[:date].to_time
.strftime('%Y年%-m月%-d日')}のシフト一覧"%></h1><br>
    <div class="workday_show_table">
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @all_workday.each do |all_workday| %>
                <tr>
                    <td><%=User.find_by(id:all_workday.user_id).name%></td>
                    <td><%="#{all_workday&.begin_time&.strftime( "%-H:%M" )}～#{all_workday&.finish_time&.strftime( "%-H:%M" )}"%>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

</div>