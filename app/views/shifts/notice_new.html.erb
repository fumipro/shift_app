<div class="main">
  <h2>お知らせを投稿する</h2>
  <div class="notice-form">
    <%= form_with(url: "/notice/new" ,model: @notice, local: true) do |f| %>
    <%= render 'shared/notice_error_messages' %>

    <div>
      <%= f.label :件名 %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :本文 %>
      <%= f.text_area :content ,class:"text-area"%>
    </div>

    <div class="text-center">
      <%= f.submit "投稿", class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>
</div>