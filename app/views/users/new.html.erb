<div class="main">
  <h2>新しく店員を登録する</h2><br>

  <div class="row">
    <div class="user-form">
      <div class="col-md-6  col-md-offset-3">
        <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/user_error_messages' %>

        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form form-control' %>
        <br>
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: 'form form-control' %>
        <br>
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form form-control' %>
        <br>
        <% f.label :password_confirmation, "Confirmation" %>
        <strong><%="確認用パスワード"%></strong>
        <%= f.password_field :password_confirmation, class: 'form form-control' %>

        <div class="text-center">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>